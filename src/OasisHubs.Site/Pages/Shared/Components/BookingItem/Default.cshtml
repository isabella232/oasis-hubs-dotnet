@model BookingItemViewComponent.BookingItemVModel
<div
    class="group relative bg-white border border-gray-200 rounded-lg flex flex-col overflow-hidden pointer-events-none">
    <div class="aspect-w-3 aspect-h-4 bg-gray-200 group-hover:opacity-75 sm:aspect-none sm:h-96">
        <img src="@Model.UserBooking.Rental.ImageUrl"
            alt="Eight shirts arranged on table in black, olive, grey, blue, white, red, mustard, and green."
            class="w-full h-full object-center object-cover sm:w-full sm:h-full" />
    </div>
    <div class="flex-1 p-4 space-y-2 flex flex-col">
        <h3 class="text-sm font-medium text-gray-900">
            <a href="#">
                <span aria-hidden="true" class="absolute inset-0"></span>
                @Model.UserBooking.Rental.Title
            </a>
        </h3>
       <p class="text-sm text-gray-500">
          @Model.UserBooking.Rental.Description
       </p>
        <div class="flex-1 flex flex-col justify-end">
           <p class="text-sm italic text-gray-500">
              @Model.UserBooking.ReservedDateUtc.ToLocalTime().Date.ToString("D")
           </p>
            <p class="text-base font-medium text-gray-900">
                @Model.UserBooking.Hours Hours</p>
        </div>

    </div>
</div>
