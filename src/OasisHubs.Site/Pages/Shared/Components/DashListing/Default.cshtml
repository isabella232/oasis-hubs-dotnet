@model DashListingViewComponent.DashListingModel

<div class="bg-white overflow-hidden shadow hover:shadow-lg rounded-lg cursor-pointer">
    <div class="flex-shrink-0"><img class="h-52 w-full object-cover object-top" src="@Model.Rental.ImageUrl"
            alt="" /></div>
    <div class="bg-white p-6 flex flex-col justify-between">
        <div class="grid grid-cols-1 items-center">
            <div class="mt-1">
                <p class="text-xs font-semibold text-purple-500 mr-3 capitalize"> @Model.Rental.HubType

                   <span class="text-gray-900">· @Model.Rental.Location </span>
                   <span class="@(Model.Rental.IsActive? "text-green-500": "text-red-500")">· @(Model.Rental.IsActive? "Active" : "Inactive") </span>
                </p>
            </div>
            <div class="mt-1">
                <p class="text-xl font-semibold text-gray-900 mr-3 capitalize">@Model.Rental.Title</p>
            </div>
        </div>
        <p class="mt-1 text-base text-gray-500 capitalize">@Model.Rental.Description</p>
        <div class="mt-2 flex items-center">
            <div>
                <div class="flex space-x-1 text-gray-700 font-bold">
                   @Model.Rental.HubTier
                </div>
            </div>
        </div>

        <div class="flex items-center">
           <div class="ml-1 mr-1 mt-3 hidden">·</div>
           @if (Model.Rental.IsActive)
           {
              <form asp-page="/Dashboard/Listings" asp-page-handler="DeactivateListing" method="POST" class="m-0">
                 <input id="referenceCode" name="referenceCode" class="hidden" value="@Model.Rental.ReferenceCode"/>
                 <button type="submit"
                         class="text-red-500 mt-3 cursor-pointer hover:underline font-medium">Deactivate</button>
              </form>
           }
           else
           {
              <form asp-page="/Dashboard/Listings" asp-page-handler="ActivateListing" method="POST" class="m-0">
                 <input id="referenceCode" name="referenceCode" class="hidden" value="@Model.Rental.ReferenceCode"/>
                 <button type="submit"
                         class="text-green-500 mt-3 cursor-pointer hover:underline font-medium">Activate</button>
              </form>
           }
        </div>
    </div>
</div>
