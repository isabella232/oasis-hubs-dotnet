<header class="relative">
   <nav aria-label="Top">
      <!-- Top navigation -->
      <div class="bg-gray-800">
         <div class="mx-auto h-10 px-4 flex items-center justify-end sm:px-6 lg:px-20">
            <div class="flex items-center space-x-3">
               @if (User.Identity?.IsAuthenticated ?? false)
               {

                  <a asp-page="/Dashboard/Index" secure-policy="is_host_policy" class="text-white pl-2 text-sm font-medium ">
                     Dashboard </a>
                  <form asp-controller="OasisActions" asp-action="CreatePortalSession" method="POST" class="m-0">
                     <button type="submit" class="text-white pl-2 text-sm font-medium hover:text-accent-color">
                        Portal
                     </button>
                  </form>
                  <form asp-page="/SignOut" method="POST" class="m-0">
                     <button class="text-white pl-2 text-sm font-medium hover:text-accent-color ">Sign Out</button>
                  </form>
               }
               else
               {
                  <a href="/signin" class="text-sm font-medium text-white hover:text-accent-color">Sign In</a>
                  <a href="/signup" class="text-sm font-medium text-white hover:text-accent-color">Register</a>
               }
            </div>
         </div>
      </div>

      <!-- Secondary navigation -->
      <div class="bg-white">
         <div class="mx-auto px-4 sm:px-6 lg:px-20 shadow-md">
            <div class="">
               <div class="h-16 flex items-center justify-between">
                  <!-- Logo (lg+) -->
                  <div class="hidden lg:flex-1 lg:flex lg:items-center">
                     <a href="/">
                        <span class="sr-only">Workflow</span>
                        <img class="h-14 w-auto" src="/images/oasis_logo_long.png" alt=""/>
                     </a>
                  </div>

                  <div class="hidden h-full lg:flex">
                     <ul class="h-full flex justify-center space-x-8 items-center">
                        <li>
                            <a asp-page="/listings"
                                   class="relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px border-transparent text-gray-700 hover:text-gray-800">
                              Explore
                           </a>
                        </li>
                        <li>
                           <button type="button"
                                   class="relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px border-transparent text-gray-700 hover:text-gray-800 pointer-events-none">
                              Places To Stay
                           </button>
                        </li>
                        <li>
                           <button type="button"
                                   class="relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px border-transparent text-gray-700 hover:text-gray-800 pointer-events-none">
                              Outdoor Adventures
                           </button>
                        </li>
                        <li>
                           <button type="button"
                                   class="relative z-10 flex items-center transition-colors ease-out duration-200 text-sm font-medium border-b-2 -mb-px pt-px border-transparent text-gray-700 hover:text-gray-800 pointer-events-none">
                              Experiences
                           </button>
                        </li>
                     </ul>

                  </div>

                  <!-- Mobile menu and search (lg-) -->
                  <div class="flex-1 flex items-center lg:hidden">
                     <button class="-ml-2 bg-white p-2 rounded-md text-gray-400">
                        <span class="sr-only">Open menu</span>
                        <svg class="h-6 w-6" x-description="Heroicon name: outline/menu"
                             xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" aria-hidden="true">
                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                 d="M4 6h16M4 12h16M4 18h16">
                           </path>
                        </svg>
                     </button>

                     <!-- Search -->
                     <a href="/listings" class="ml-2 p-2 text-gray-400 hover:text-gray-500">
                        <span class="sr-only">Search</span>
                        <svg class="w-6 h-6" x-description="Heroicon name: outline/search"
                             xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor" aria-hidden="true">
                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                 d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z">
                           </path>
                        </svg>
                     </a>
                  </div>

                  <!-- Logo (lg-) -->
                  <a asp-page="/index" class="lg:hidden">
                     <img src="/images/oasis_logo_long.png" alt="" class="h-14 w-auto"/>
                  </a>

                  <div class="flex-1 flex items-center justify-end">
                      <a asp-page="/listings"
                        class="hidden text-sm font-medium text-gray-700 hover:text-gray-800 lg:block">
                        Search
                     </a>

                     <div class="flex items-center lg:ml-8">
                        <!-- Help -->
                        <a href="#" class="p-2 text-gray-400 hover:text-gray-500 lg:hidden">
                           <span class="sr-only">Help</span>
                           <svg class="w-6 h-6" x-description="Heroicon name: outline/question-mark-circle"
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor" aria-hidden="true">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                              </path>
                           </svg>
                        </a>
                        <a asp-page="/Bookings" secure="true" class="hidden text-sm font-medium text-gray-700 hover:text-gray-800 lg:block">
                           My Bookings
                        </a>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </nav>
</header>
