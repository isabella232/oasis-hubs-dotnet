@page
@model Bookings

<vc:header></vc:header>
<main class="bg-white">


   <div>
      <section class="max-w-2xl mx-auto px-4 lg:max-w-7xl lg:px-8">
         <div class="border-b border-gray-200 pt-10 pb-10">
            <h1 class="text-4xl font-extrabold tracking-tight text-gray-900">My Bookings</h1>
            <p class="mt-4 text-base text-gray-500">All the cool places you've booked.</p>
         </div>

         <div class="pt-12 pb-24 lg:grid lg:grid-cols-3 lg:gap-x-8 xl:grid-cols-4">

            <section aria-labelledby="product-heading" class="mt-6 lg:mt-0 lg:col-span-2 xl:col-span-4">
               <h2 id="product-heading" class="sr-only">Products</h2>

               <div class="grid grid-cols-1 gap-y-4 sm:grid-cols-2 sm:gap-x-6 sm:gap-y-10 lg:gap-x-8 xl:grid-cols-3">

                  @foreach (var booking in @Model.UserBookings)
                  {
                     <vc:booking-item user-booking ="@booking"></vc:booking-item>
                  }

               </div>
            </section>
         </div>
      </section>

   </div>
</main>
<vc:footer></vc:footer>
