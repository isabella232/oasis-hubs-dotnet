@page
@model IndexModel

<main class="">
   <div class="antialiased text-gray-800">
      <header
         style="background-image: url('https://images.unsplash.com/photo-1483389127117-b6a2102724ae');"
         class="relative bg-no-repeat bg-cover lg:bg-center pt-10 px-10 pb-72 bg-top-right">

         <div class="flex justify-between">
            <a href="/">
               <h1 class="relative grid items-center ">
                  <span class="sr-only">RentWell</span>
                  <span class="text-white text-4xl font-light">Oasis Hubs</span>
               </h1>
            </a>

            <div class="md:block">
               @if (User.Identity?.IsAuthenticated ?? false)
               {
                  <div class="flex space-x-3 items-center">
                     <div class="flex items-center justify-start">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-purple-500" fill="none"
                             viewBox="0 0 24 24" stroke="currentColor">
                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                     </div>
                     @if (!(Model.OasisUser?.IsHost ?? false))
                     {
                        <a asp-page="/Hosts/SignUp" class="font-semibold text-gray-700 hover:text-purple-700">
                           Become A Host
                        </a>
                     }
                     else
                     {
                        <div class="m-0">
                           <a asp-page="/Dashboard/Index" class="font-semibold text-gray-700 hover:text-purple-700">
                              Dashboard
                           </a>
                        </div>
                     }
                     <a asp-page="/pricing" class="font-semibold text-gray-700 hover:text-purple-700">Pricing</a>
                     <a asp-page="/Bookings" secure="true" class="text-gray-700 font-semibold hover:text-purple-700">
                        Bookings
                     </a>
                     <form asp-controller="OasisActions" asp-action="CreatePortalSession" method="POST" class="m-0 items-center flex">
                        <button type="submit" class="text-gray-700 font-semibold hover:text-purple-700">
                           Portal
                        </button>
                     </form>
                     <form asp-page="/SignOut" method="POST" class="m-0 items-center flex">
                        <button type="submit" class="text-gray-700 font-semibold hover:text-purple-700">
                           Sign Out
                        </button>
                     </form>
                  </div>
               }
               else
               {
                  <div class="text-gray-700">
                     <a asp-page="/pricing" class="font-semibold py-1 hover:text-purple-700">Pricing</a> |
                     <a asp-page="/hosts/signup" class="font-semibold py-1 hover:text-purple-700">Become A Host</a> |
                     <a asp-page="/signin" class="font-semibold py-1 hover:text-purple-700">Sign In</a> |
                     <a asp-page="/signup" class="font-semibold py-1 hover:text-purple-700">Register</a>
                  </div>
               }
            </div>

            <div class="md:hidden">
               <button type="button" class="bg-white p-2 rounded-md text-gray-400 lg:hidden">
                  <span class="sr-only">Open menu</span>
                  <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                       stroke="currentColor" aria-hidden="true">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                           d="M4 6h16M4 12h16M4 18h16">
                     </path>
                  </svg>
               </button>
            </div>
         </div>

         <div class="max-w-5xl mx-auto lg:pt-32 lg:pb-8 pb-4 pt-10">
            <h2 class="text-4xl font-normal text-white leading-none text-center">
               Book a workspace. Host Hubs. All on Oasis Hubs.
            </h2>
         </div>


         <div class="sm:flex items-center max-w-6xl mx-auto px-6 pt-3 pb-4 mb-10 bg-white rounded">
            <div class="mt-1 w-full">
               <label for="where" class="block text-md font-medium text-gray-700">Where</label>
               <select name="where" id="where"
                       class="border p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                  <option value="United States" selected>United States</option>
                  <option value="Canada">Canada</option>
                  <option value="Nigeria">Nigeria</option>
                  <option value="Mexico">Mexico</option>
               </select>
            </div>
            <div class="grow sm:ml-4 w-full">
               <label for="checkIn" class="block text-md font-medium text-gray-700">Date</label>
               <div class="mt-1">
                  <input type="date" name="checkIn" id="checkIn"
                         class="border p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
               </div>
            </div>
            <div class="grow sm:ml-4 w-9/12">
               <label for="hours" class="block text-md font-medium text-gray-700">Hours</label>
               <div class="mt-1">
                  <input type="number" name="hours" id="hours"
                        class="border p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
               </div>
            </div>
            <div class="grow sm:ml-4 w-6/12" >
               <a asp-page="/listings"
                  class="inline-block items-center mt-7 px-6 py-1.5 text-sm w-full text-center font-bold rounded text-white hover:bg-purple-700 bg-purple-600 focus:outline-none">
                  Search
               </a>
            </div>
         </div>
      </header>

      <div class="max-w-6xl mx-auto lg:py-16 py-12 px-4">

         <h3 class="font-bold bold text-2xl lg:mb-2 mb-4 leading-8 text-center sm:text-left">
            What guests are saying about our Hub Workspaces
         </h3>

         <div class="flex lg:items-center items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="fill-current w-8 h-8 text-gold" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                     d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
            <p class="pl-2">
               Our Hubs were <strong>rated 4.8 out of 5 stars</strong> with <strong> 42,500,000+ reviews </strong>
            </p>
         </div>

         <section class="flex items-start flex-wrap justify-between lg:my-8 my-6 border-b border-gray-300 pb-8">

            <!-- Info -->

            <div class="lg:w-1/3 w-full lg:pr-4 lg:mb-0 mb-6">
               <svg class="w-8 h-8 fill-current text-red-400 h-6 w-6" xmlns="http://www.w3.org/2000/svg"
                    fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
               </svg>
               <p class="font-bold mt-3 mb-1">24/7 customer support</p>
               <p class="text-gray-700 font-light text-sm leading-snug">
                  Day or night, we’re here for you. Talk to
                  our support
                  team from anywhere in the world, any hour of day.
               </p>
            </div>

            <div class="lg:w-1/3 w-full lg:px-2 lg:mb-0 mb-6">
               <svg class="w-8 h-8 text-brand-color h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none"
                    viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
               </svg>

               <p class="font-bold mt-3 mb-1">Global hospitality standards</p>
               <p class="text-gray-700 font-light text-sm leading-snug">
                  Guests review their hosts after each stay.
                  All hosts
                  must maintain a minimum rating and our hospitality standards to be on RentWell.
               </p>
            </div>
            <div class="lg:w-1/3 w-full lg:pl-4">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gold fill-current" fill="none"
                    viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
               </svg>
               <p class="font-bold mt-3 mb-1">5-star hosts</p>
               <p class="text-gray-700 font-light text-sm leading-snug">
                  From fresh-pressed sheets to tips on where
                  to get the
                  best brunch, our hosts are full of local hospitality.
               </p>
            </div>
         </section>

         <a href="/listings"
            class="text-dark-gray text-lg block items-center font-medium text-center sm:text-left">
            Show
            all (15,000+)
            <svg viewBox="0 0 18 18" role="presentation" aria-hidden="true" focusable="false"
                 class="ml-2 inline relative w-3 h-3 fill-current text-dark-gray">
               <path d="m4.29 1.71a1 1 0 1 1 1.42-1.41l8 8a1 1 0 0 1 0 1.41l-8 8a1 1 0 1 1 -1.42-1.41l7.29-7.29z"
                     fill-rule="evenodd">
               </path>
            </svg>
         </a>
      </div>
   </div>
</main>

<vc:footer></vc:footer>
